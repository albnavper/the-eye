{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./runner",
        "types": [
            "node"
        ],
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "runner/**/*.ts",
        "runner/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "docs"
    ]
}